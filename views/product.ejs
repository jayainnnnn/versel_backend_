<%- include('partials/header') %>
<%- include('partials/nav') %>

<style>
  .container {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2rem;
    background: #fff;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    font-family: 'Segoe UI', sans-serif;
  }

  .product-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .product-card img {
    max-width: 280px;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.15);
    margin-bottom: 1.5rem;
  }

  .product-info h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .price {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0.5rem 0;
  }

  .original-price {
    font-size: 1rem;
    color: #999;
    text-decoration: line-through;
    margin-left: 0.5rem;
  }

  .tags {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .tag {
    padding: 0.4rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .green {
    background-color: #e6f4ea;
    color: #218739;
  }

  .orange {
    background-color: #fff0e0;
    color: #ff6600;
  }

  .chart-section {
    margin-top: 3rem;
  }

  .chart-section h3 {
    text-align: center;
    font-size: 1.4rem;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .product-card {
      flex-direction: row;
      gap: 2rem;
      text-align: left;
    }

    .product-card img {
      margin-bottom: 0;
    }

    .product-info {
      flex: 1;
    }
  }
</style>

<div class="container">
  <div class="product-card">
    <img src="<%= image_path %>" alt="<%= name %>">
    <div class="product-info">
      <h3><%= name %></h3>
      <p class="price">₹<%= price %><span class="original-price">₹<%= max_price %></span></p>
      <div class="tags">
        <span class="tag green">Best Time to Buy</span>
        <span class="tag orange"><%= discount %>% OFF</span>
      </div>
    </div>
  </div>

  <div class="chart-section">
    <h3>Price History</h3>
    <canvas id="priceChart"></canvas>
  </div>
</div>

<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const ctx = document.getElementById('priceChart').getContext('2d');
  const priceHistory = <%- JSON.stringify(priceHistory) %>;

  const labels = priceHistory.map(item => item.date);
  const data = priceHistory.map(item => item.product_price);

  new Chart(ctx, {
    type: 'line',
    data: {
      labels: labels,
      datasets: [{
        label: 'Price',
        data: data,
        fill: false,
        borderColor: '#007bff',
        tension: 0.1
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          display: false
        }
      }
    }
  });
</script>
