<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="container">
  <div class="product-grid">

    <!-- Add Product Box -->
    <div class="product-card add-product-card" onclick="openModal()">
      <div class="add-icon">+</div>
      <p>Add New Product</p>
    </div>
   

    <% if (products && products.length > 0) { %>
      <% products.forEach(product => { %>
        <!-- <div class="product-card">
          <img src="<%= product.product_image_link %>" alt="image">
          <h4><%= product.product_name %></h4>
          <p><strong>Price: ₹<%= product.price %> </strong></p>
          <a href="/producthome/product">View Product</a>
          <p class="date"><%= product.date %></p>
        </div> -->
        <a href="/producthome/product/<%= (product.product_id) %>" class="product-card">
          <img src="<%= product.product_image %>" alt="image">
          <h4 class="product-title"><%= product.product_name %></h4>
          <p class="product-price">₹<%= product.product_price %></p>
          <p class="date"><%= product.date %></p>
        </a>

      <% }); %>
    <% } else { %>
      <p>No products found.</p>
    <% } %>


  </div>
</div>

<!-- Modal -->
<div id="addProductModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <h2>Add New Product</h2>
    <form action="/producthome/add_product" method="POST" id="addProductForm">
      <label for="url">Product URL:</label>
      <input type="url" id="url" name="url" placeholder="https://example.com/product" required>
      <button type="submit">Add</button>
     
    </form>
  </div>
</div> 


<style>
/* Main layout styles (unchanged) */
.container {
  padding: 30px 20px;
}
.product-card {
  text-decoration: none; /* since now it’s a link */
  color: inherit;
  cursor: pointer;
}

.product-title {
  margin: 15px 0 8px;
  font-size: 1.05rem;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 3; /* show only 3 lines */
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 3.9em; /* keeps card height consistent */
}

.product-price {
  margin: 8px 0;
  font-size: 1.4rem;
  font-weight: 800;
  color: #fff;
  background: linear-gradient(to right, #d62828, #ff5f5f);
  padding: 6px 12px;
  border-radius: 8px;
  display: inline-block;
  letter-spacing: 0.5px;
  font-family: 'Segoe UI', sans-serif;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  justify-content: center;
}

.product-card {
  width: 300px; /* increased from 250px */
  border: 1px solid #ddd;
  padding: 18px;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  background-color: #fff;
  transition: transform 0.2s, box-shadow 0.2s;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
}

.product-card img {
  width: 100%;
  height: 220px; /* increased image height */
  object-fit: contain; /* so the whole image fits */
  border-radius: 8px;
  background-color: #f9f9f9;
  padding: 10px;
}

.product-card h4 {
  margin: 15px 0 8px;
  font-size: 1.1rem;
  font-weight: 600;
}

.product-card p {
  margin: 5px 0;
  font-size: 0.95rem;
}

.product-card a {
  display: inline-block;
  margin-top: 12px;
  color: #007bff;
  font-weight: 500;
  text-decoration: none;
}

.product-card .date {
  font-size: 0.85rem;
  color: #777;
  margin-top: 8px;
}

.add-product-card {
  width: 300px;
  height: 330px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #555;
  font-weight: 500;
  background: #f0f0f0;
  border: 2px dashed #bbb;
  cursor: pointer;
  transition: background 0.3s, color 0.3s;
}

.add-product-card:hover {
  background: #e0e0e0;
  color: #000;
}

.add-icon {
  font-size: 3.5rem;
  margin-bottom: 10px;
  line-height: 1;
}

/* Modal Styles */
.modal {
  display: none;
  position: fixed;
  z-index: 10;
  left: 0; top: 0;
  width: 100%; height: 100%;
  background-color: rgba(0,0,0,0.5);
  justify-content: center;
  align-items: center;
}
.modal-content {
  background-color: #fff;
  padding: 30px;
  border-radius: 10px;
  width: 400px;
  max-width: 90%;
  box-shadow: 0 0 20px rgba(0,0,0,0.3);
  position: relative;
}
.modal-content h2 {
  margin-bottom: 20px;
}
.modal-content label {
  display: block;
  margin-bottom: 8px;
}
.modal-content input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
  margin-bottom: 15px;
}
.modal-content button {
  background-color: #007bff;
  color: white;
  padding: 10px 18px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  width: 100%;
}
.modal-content button:hover {
  background-color: #0056b3;
}
.close {
  position: absolute;
  top: 12px;
  right: 16px;
  font-size: 24px;
  cursor: pointer;
}
</style>
<script>
  function openModal() {
    document.getElementById("addProductModal").style.display = "flex";
  }

  function closeModal() {
    document.getElementById("addProductModal").style.display = "none";
  }

  // Optional: Close modal if clicked outside
  window.onclick = function(event) {
    const modal = document.getElementById("addProductModal");
    if (event.target === modal) {
      closeModal();
    }
  }

  // Optional: ESC key closes modal
  window.addEventListener("keydown", function(event) {
    if (event.key === "Escape") {
      closeModal();
    }
  });
</script>